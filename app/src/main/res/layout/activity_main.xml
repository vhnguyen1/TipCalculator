<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.vnguyen629cs273.tipcalculator.MainActivity"
    android:columnCount="2"
    android:useDefaultMargins="true"
    android:clickable="false">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountEditText"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/amountTextView"
        android:hint="@string/enter_amount"
        android:layout_column="0"
        android:layout_row="0"
        android:autoText="true"
        android:background="#bbdefb"
        android:elevation="4dp"
        android:padding="12dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:id="@+id/tipPercentTextView"
        android:layout_column="0"
        android:layout_row="1" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipPercentSeekBar"
        android:layout_column="1"
        android:layout_row="1"
        android:indeterminate="false"
        android:layout_gravity="fill_horizontal"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tip_text"
        android:id="@+id/tipTextView"
        android:layout_column="0"
        android:layout_row="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tipAmountTextView"
        android:layout_column="1"
        android:layout_row="2"
        android:background="#ffe0b2"
        android:hint="@string/default_amount"
        android:layout_gravity="fill_horizontal"
        android:padding="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalTextView"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/total_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalAmountTextView"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/default_amount"
        android:background="#ffe0b2"
        android:padding="12dp" />

</GridLayout>
